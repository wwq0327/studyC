[alias]
	ci = commit -a
	co = checkout
	br = branch
	st = status
	df = diff
	lg = log -p

[color]
	ui = true
	status = auto
	branch = auto

[status]
	color = true

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green
[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
        whitespace = red reverse
[color "status"]
        added = yellow
        changed = green
        untracked = cyan

[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
